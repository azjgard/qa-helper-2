{
  "manifest_version": 2,

  "name"        : "QA Helper",
  "description" : "Tool to aid with Courseware Quality Assurance",
  "version"     : "2.0",

  "browser_action" : {
    "default_icon" : "icon.png",
    "default_title": "QA Helper"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/jquery.js",
        "lib/jquery-ui.min.js",
        "content/logic/templateLoad.js",
        "content/logic/templateListeners.js",
        "content/logic/message.js",
        "content/controller.js"
        ],
      "css" : [
        "ui/style.css" 
      ]
    }
  ],

  "background" : {
    "scripts" : [
      "background/background.js",
      "lib/jquery.js"
    ]
  },

  "permissions" : [
    "tabs",
    "<all_urls>",
    "notifications"
  ]
}
