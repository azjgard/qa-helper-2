{
  "manifest_version": 2,

  "name"        : "QA Helper",
  "description" : "Tool to aid with Courseware Quality Assurance",
  "version"     : "2.0",

  "browser_action" : {
    "default_icon" : "icon.png",
    "default_title": "QA Helper"
  },

  "content_scripts": [
    {
      "matches": [
        "*://prdtfs.uticorp.com/*",
        "*://avondale-iol/*",
        "*://uti.blackboard.com/*"
      ],
      "js" : [
        "lib/jquery.js",
        "lib/jquery-ui.min.js",
        "lib/arrive.js",
        "lib/utilities.js"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/preload.js",
        "content/logic/utilities.js",
        "content/logic/templateLoad.js",
        "content/logic/addBug2.js",
        "content/logic/navigate.js",
        "content/logic/contextScripts.js",
        "content/controller.js"
        ],
      "css" : [
        "lib/jquery-ui.css",
        "ui/style.css"
      ]
    }
  ],

  "background" : {
    "scripts" : [
      "lib/jquery.js",
      "lib/utilities.js",
      "background/logic/utilities.js",
      "background/logic/initialize.js",
      "background/logic/run.js",
      "background/controller.js"
    ]
  },

  "permissions" : [
    "tabs",
    "<all_urls>",
    "notifications",
    "storage"
  ]
}
